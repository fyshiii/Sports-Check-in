/* pages/point/point.wxss */
.centerContainer{
    margin-top: 10px;
    height:90vh;
    width:90vw;
    background-color: rgba(250,250,250,0.69);
    border-radius: 30px;
    box-shadow: -5px -5px 5px white,5px 5px 5px rgba(255,136,85,0.6);
    text-align: center;
}
.deviceList{
    height:100%;
    width: 100%;
    padding-top: 5vh;
}
.box {
    padding:0;
    width:92vw;
    height:35vh;
    z-index: 10;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0vw;
    margin:0;
    right: 0;
}