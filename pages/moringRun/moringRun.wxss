/* pages/moringRun/moringRun.wxss *//* pages/planRun/planRun.wxss */
.main{
    height:95vh;
    width:92vw;
    overflow: hidden;
    position: relative;
    margin-top: 20px;
    background-color:#81c784; /*rgba(250,250,250,0.69);*/
    border-radius: 15px;
    /*box-shadow: -5px -5px 5px white,5px 5px 5px #FF8855;*/
    /*background-image: linear-gradient(to right top, #f2afd6, #e5b0df, #d7b2e6, #c6b5eb, #b5b7ee, #a7bdf3, #9ac3f6, #8dc9f6, #83d4f8, #80def5, #84e7f0, #90efe9);*/
}
.page-section-gap{
    box-sizing: border-box;
    padding: 0 30rpx;
  }
  
  .page-body-button {
    margin-bottom: 30rpx;
  }
  
  .customCallout {
    box-sizing: border-box;
    background-color: #fff; 
    border: 1px solid #ccc;
    border-radius: 30px;
    width: 150px;
    height: 40px;
    display: inline-flex;
    padding: 5px 20px;
    justify-content: center;
    align-items: center;
  }
  
  .circle {
    width: 20px;
    height: 20px;
    border: 1px solid #ccc;
    border-radius: 50%;
  }
  
  .icon {
    width: 16px;
    height: 16px;
  }
  
  .content {
    flex: 0 1 auto;
    margin: 0 10px;
    font-size: 14px;
  }
  .flex-style{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
  }
  .flex-item{
    height: 35px; 
    line-height: 35px;
    text-align: center;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1
  }
  .flex-item.active{
    color:#0091ff;
  }
  .map_box{
    height: 40vh;
    width:86vw;
    position:absolute;
    top: 35px;
    bottom: 90px;
    left: 7vw;
    border-radius: 20px;
    overflow: hidden;
    right: 0px;
  }
  #navi_map{
    width: 100%;
    height: 100%;
  }
  .text_box{
    position:absolute;
    height: 90px;
    bottom: 0px;
    left: 0px;
    right: 0px;
  }
  .text_box .text{
    margin: 15px;
  }
  .detail_button{
    position:absolute;
    bottom: 30px;
    right: 10px;
    padding: 3px 5px;
    color: #fff;
    background: #0091ff;
    width:50px;
    text-align:center;
    border-radius:5px;
  }
  .chosePoint{
    float: left;
    height:30px;
    color: white;
    padding-top: 3px;
    background-color: white;
    color: #81c784;
    border: 1px white solid;
    width: 18vw;
    margin: 0;
    border: none;
    box-shadow: 3px 3px 5px rgba(150,150,150,0.6);
  }
  .animations_readyRun_top{
    border:2px solid yellow;position: absolute;width: 92vw;left: 0vw;height: 35vh;background-color: rgba(255,255,255,0.95);
    clip-path: polygon(0 0,30% 0,45% 85%,100% 100%,0 100%);transform-origin: bottom right;transition: .5s;
    box-shadow: 3px 3px 5px rgba(150,150,150,0.6),-3px -3px 5px white;
  }
  .runWay{
  float: left;background-color:#81c784;margin-left: 2vw !important;width:10vw !important;height:5px;padding:0;border-radius: 2px;
  }